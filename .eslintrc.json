{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": [
    "@typescript-eslint",
    "promise"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "keyword-spacing": "error",
    "space-before-blocks": "error",
    "eol-last": [
      "error"
    ],
    "indent": [
      "error",
      "tab"
    ],
    "linebreak-style": "off",
    "no-unused-vars": [
      "warn"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "@typescript-eslint/no-explicit-any": [
      "error"
    ],
    "promise/catch-or-return": [
      "error",
      {
        "terminationMethod": ["catch", "finally"]
      }
    ]
  }
}
